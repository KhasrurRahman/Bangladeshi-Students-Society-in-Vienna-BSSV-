<script>
  // Search and filter functionality
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const filterButtons = document.querySelectorAll('.filter-btn');
  const studentCards = document.querySelectorAll('.student-card');
  const universityGroups = document.querySelectorAll('.university-group');
  const noResults = document.getElementById('noResults');

  let currentUniversityFilter = 'all';

  function filterStudents() {
    const searchTerm = searchInput.value.toLowerCase().trim();
    let visibleCount = 0;
    const universityVisibleCount: Record<string, number> = {};

    studentCards.forEach(card => {
      const name = card.getAttribute('data-name') || '';
      const university = card.getAttribute('data-university') || '';
      const department = card.getAttribute('data-department') || '';
      
      const matchesSearch = name.includes(searchTerm) || 
                           university.toLowerCase().includes(searchTerm) || 
                           department.includes(searchTerm);
      
      const matchesUniversity = currentUniversityFilter === 'all' || 
                               university === currentUniversityFilter;

      const isVisible = matchesSearch && matchesUniversity;
      
      (card as HTMLElement).style.display = isVisible ? 'block' : 'none';
      
      if (isVisible) {
        visibleCount++;
        universityVisibleCount[university] = (universityVisibleCount[university] || 0) + 1;
      }
    });

    // Show/hide university groups
    universityGroups.forEach(group => {
      const university = group.getAttribute('data-university') || '';
      const hasVisibleStudents = universityVisibleCount[university] > 0;
      const matchesUniversityFilter = currentUniversityFilter === 'all' || university === currentUniversityFilter;
      
      (group as HTMLElement).style.display = (hasVisibleStudents && matchesUniversityFilter) ? 'block' : 'none';
    });

    // Show/hide no results message
    if (noResults) {
      noResults.style.display = visibleCount === 0 ? 'block' : 'none';
    }
  }

  // Search input event listener
  if (searchInput) {
    searchInput.addEventListener('input', filterStudents);
  }

  // Filter button event listeners
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons
      filterButtons.forEach(btn => btn.classList.remove('active'));
      
      // Add active class to clicked button
      button.classList.add('active');
      
      // Update current filter
      currentUniversityFilter = button.getAttribute('data-university') || 'all';
      
      // Apply filters
      filterStudents();
    });
  });

  // Initialize
  filterStudents();
</script>