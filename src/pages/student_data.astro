<Layout title="Student Data - BSSV">
  <main class="container">
    <header class="page-header">
      <h1>🎓 BSSV Student Directory</h1>
      <p class="subtitle">
        Meet our {totalStudents} talented Bangladeshi students studying across {universities.length} universities in Vienna
      </p>
    </header>

    <div class="stats-section">
      <div class="stat-card">
        <div class="stat-number">{totalStudents}</div>
        <div class="stat-label">Total Students</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">{universities.length}</div>
        <div class="stat-label">Universities</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">{new Set(students.map(s => s.department)).size}</div>
        <div class="stat-label">Departments</div>
      </div>
    </div>

    <div class="search-section">
      <div class="search-container">
        <input 
          type="text" 
          id="searchInput" 
          placeholder="Search by name, university, or department..." 
          class="search-input"
        >
        <div class="filter-buttons">
          <button class="filter-btn active" data-university="all">All Universities</button>
          {universities.map(uni => (
            <button class="filter-btn" data-university={uni}>{uni.replace('University of ', '').replace('TU Wien', 'TU Wien')}</button>
          ))}
        </div>
      </div>
    </div>

    <div class="students-section">
      {Object.entries(studentsByUniversity).map(([university, universityStudents]) => (
        <div class="university-group" data-university={university}>
          <h2 class="university-title">
            🏛️ {university} 
            <span class="student-count">({universityStudents.length} students)</span>
          </h2>
          <div class="student-grid">
            {universityStudents.map((student) => (
              <div class="student-card" 
                   data-name={student.name.toLowerCase()} 
                   data-university={university} 
                   data-department={student.department.toLowerCase()}
                   data-whatsapp={student.whatsapp || ''}>
                <div class="student-image-container">
                  <img 
                    src={defaultImg} 
                    alt={student.name}
                    loading="lazy"
                  />
                  <div class="student-overlay">
                    <span class="degree-badge">{student.degree || 'Student'}</span>
                  </div>
                </div>
                <div class="student-info">
                  <h3 class="student-name">{student.name}</h3>
                  <p class="student-detail">
                    <span class="icon">🏫</span>
                    <span class="text">{student.university}</span>
                  </p>
                  <p class="student-detail">
                    <span class="icon">📚</span>
                    <span class="text">{student.department}</span>
                  </p>
                  {student.whatsapp && (
                    <p class="student-detail whatsapp-detail">
                      <span class="icon">📱</span>
                      <span class="whatsapp-text">{student.whatsapp}</span>
                    </p>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div id="noResults" class="no-results" style="display: none;">
      <div class="no-results-content">
        <h3>🔍 No students found</h3>
        <p>Try adjusting your search criteria or filters.</p>
      </div>
    </div>
  </main>
</Layout>

